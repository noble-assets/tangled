{
  "version": "1.0.0",
  "private": false,
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node ./scripts/postinstall.js",
    "changeset": "changeset",
    "dev:example": "pnpm --filter @tangled3/example-react dev",
    "dev:example-next": "pnpm --filter @tangled3/example-next dev",
    "build": "bun build:solana && bun build:react",
    "build:solana": "bun --filter @noble-assets/tangled-solana-react build",
    "build:react": "bun --filter @noble-assets/tangled-react build",
    "build:example": "pnpm --filter @tangled3/example-react build",
    "build:example-next": "pnpm --filter @tangled3/example-next build",
    "clean": "pnpm exec clean",
    "ci:release": "pnpm changeset version && pnpm publish -r --access=restricted --no-git-checks",
    "prepare": "husky && husky install",
    "lint": "eslint packages",
    "lint:fix": "eslint packages --fix",
    "format": "prettier --check . --config ./prettier.config.cjs",
    "format:fix": "prettier --write . --config ./prettier.config.cjs",
    "watch:react": "pnpm --filter @noble-assets/tangled-react watch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fs-extra": "^11.2.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "standard-version": "^9.5.0",
    "typescript": "^5.2.2"
  },
  "pnpm": {
    "overrides": {
      "@ledgerhq/devices": "6.27.1",
      "@ledgerhq/errors": "6.16.3",
      "@ledgerhq/hw-transport": "6.27.1",
      "@ledgerhq/hw-transport-webhid": "6.27.1"
    }
  },
  "packageManager": "pnpm@9.4.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write . --config ./prettier.config.cjs"
    ],
    "*.{md,css,json}": "prettier --write . --config ./prettier.config.cjs"
  }
}
